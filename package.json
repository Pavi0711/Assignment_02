{
  "name": "playwright_training",
  "version": "1.0.0",
  "main": "index.js",
   "scripts": {
    "test:crud": "npx playwright test tests/productCRUD.spec.ts",
    "test:crud-headed": "npx playwright test tests/productCRUD.spec.ts --headed",
    "test:crud-allure": "npx playwright test tests/productCRUD.spec.ts --reporter=line,allure-playwright",
    "test:crud-tagged": "npx playwright test --grep \"@crud\"",
    "test:allure-report": "npx allure generate ./allure-results --clean -o ./allure-report && npx allure open ./allure-report",
    "test:crud-full": "npm run test:crud-allure && npm run test:allure-report"
  }
  ,
